<?xml version="1.0" encoding="utf-8"?>
<layout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".fragments.AboutApplication">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo_for_about_page"
        android:layout_marginTop="140dp"
        />
    <TextView
        android:id="@+id/about_application_h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="45sp"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="24dp"
        android:textFontWeight="600"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:text="Судный день" />


    <TextView
        android:id="@+id/about_application_p1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="12dp"
        android:textFontWeight="500"
        android:lineHeight="24dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_application_h1"
        android:text="Официальное приложение Судный день.\nОказание юридических услуг на\nдистанционной основе." />

    <TextView
        android:id="@+id/about_application_href1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16dp"
        android:layout_marginTop="30dp"
        android:textFontWeight="500"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_application_p1"
        android:text="Политика конфиденциальности" />
    <TextView
        android:id="@+id/about_application_href2_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:textSize="16dp"
        android:textFontWeight="500"
        android:lineHeight="24dp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_application_href1"
        android:text="Лицензионное соглашение" />




</androidx.constraintlayout.widget.ConstraintLayout>
</layout>