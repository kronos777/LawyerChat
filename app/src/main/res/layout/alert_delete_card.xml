<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="cardItem"
            type="com.example.lawyerapplication.db.data.BanksCardItem"
            />
    </data>

    <RelativeLayout style="@style/VView"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_title"
            style="@style/TxtSemiSmallStyle"
            android:text="Удалить карту?"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="16dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_sub_title"
            style="@style/TxtRgStyle"
            android:layout_below="@id/txt_title"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:layout_marginBottom="22dp"
             />

        <TextView
            android:id="@+id/txt_cancel"
            style="@style/TxtSemiSmallStyle"
            android:layout_below="@id/txt_sub_title"
            android:layout_toStartOf="@+id/txt_ok"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/txt_cancel"
            android:textColor="@color/colorPrimary"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_ok"
            style="@style/TxtSemiSmallStyle"
            android:layout_below="@id/txt_sub_title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="12dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorThemeRed"
            android:text="@string/txt_delete"
            android:textSize="18sp" />
    </RelativeLayout>
</layout>