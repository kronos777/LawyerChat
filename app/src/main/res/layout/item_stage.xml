<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="stageItem"
            type="com.example.lawyerapplication.db.data.StageBussines"
            />
    </data>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:outlineProvider="none"
        app:cardElevation="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/stage_notes_h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{stageItem.title}"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:lineHeight="24dp"
                android:textFontWeight="500"
                android:textSize="16sp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="12dp"
                 />

            <TextView
                android:id="@+id/stage_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{stageItem.dateTime}"
                android:textColor="@color/colorGrey"
                android:fontFamily="@font/roboto"
                android:lineHeight="16dp"
                android:textFontWeight="500"
                android:textSize="11sp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/stage_notes_h1"
                android:layout_marginTop="1dp"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/stage_description_h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_below="@id/stage_date_time"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/roboto"
                android:text="@{stageItem.description}"
                android:lineHeight="20dp"
                android:textFontWeight="400"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                 />

            <ImageView
                android:id="@+id/showDescription"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:adjustViewBounds="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="23dp"
                android:rotation="90"
                android:src="@drawable/ic_expansion_header_indicator_grey_24dp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>